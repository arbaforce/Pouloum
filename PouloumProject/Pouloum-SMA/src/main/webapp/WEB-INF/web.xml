<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServiceMetierServlet</servlet-name>
        <servlet-class>fr.insalyon.waso.sma.ServiceMetierServlet</servlet-class>
        <init-param>
            <param-name>URL-SOM-User</param-name>
            <param-value>http://localhost:8080/Pouloum-SOM-User/PouloumSOM</param-value>
        </init-param>
        <init-param>
            <param-name>URL-SOM-Badge</param-name>
            <param-value>http://localhost:8080/Pouloum-SOM-Badge/PouloumSOM</param-value>
        </init-param>
        <init-param>
            <param-name>URL-SOM-Address</param-name>
            <param-value>http://localhost:8080/Pouloum-SOM-Address/PouloumSOM</param-value>
        </init-param>
        <init-param>
            <param-name>URL-SOM-Event</param-name>
            <param-value>http://localhost:8080/Pouloum-SOM-Event/PouloumSOM</param-value>
        </init-param>
        <init-param>
            <param-name>URL-SOM-Activity</param-name>
            <param-value>http://localhost:8080/Pouloum-SOM-Activity/PouloumSOM</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>PouloumSMServlet</servlet-name>
        <url-pattern>/PouloumSM</url-pattern>
        <url-pattern>/PouloumSM/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
